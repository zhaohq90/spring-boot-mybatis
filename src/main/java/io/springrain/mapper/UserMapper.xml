<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="io.springrain.mybatis.UserMapper">
    <select id="selectByPK" parameterType="long" resultType="io.springrain.mybatis.User">
        select * from user where id=4
    </select>

    <select id="select" parameterType="io.springrain.mybatis.User" resultType="io.springrain.mybatis.User">
        select * from user
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
            <if test="createDate != null">
                AND create_date = #{createDate}
            </if>
        </where>
    </select>
</mapper>